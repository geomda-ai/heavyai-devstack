# Container Image
CONTAINER=heavyai/heavyai-ee-cuda:latest

# Installation Type (simple, soa, or jupyter)
INSTALL_TYPE=simple

# Service Names
HEAVYDB_SERVICE_NAME=heavydb
IMMERSE_SERVICE_NAME=immerse
IQ_SERVICE_NAME=iq

# Ports
IMMERSE_PORT=6273
HEAVYDB_PORT=6274
HEAVYIQ_PORT=6275
HEAVYDB_BACKEND_PORT=6278
HEAVYDB_CALCITE_PORT=6279

# Directory Paths
HEAVY_CONFIG_BASE=/var/lib/heavyai
HEAVY_STORAGE_DIR=/var/lib/heavyai/storage
HEAVYDB_IMPORT_PATH=/var/lib/heavyai/import
HEAVYDB_EXPORT_PATH=/var/lib/heavyai/export
HEAVY_IQ_LOCATION=/var/lib/heavyai/iq
HEAVY_IMMERSE_LOCATION=/var/lib/heavyai/immerse

# Config Files
HEAVYDB_CONFIG_FILE=/var/lib/heavyai/heavy.conf
HEAVY_IQ_CONFIG_FILE=/var/lib/heavyai/iq/iq.conf
HEAVY_IMMERSE_CONFIG_FILE=/var/lib/heavyai/immerse/immerse.conf
IMMERSE_SERVERS_JSON=/var/lib/heavyai/immerse/servers.json

# URLs
HEAVYDB_BACKEND_URL=http://heavydb:6278
IQ_URL=http://heavydb:6275

# Jupyter Configuration
EXTERNAL_PORT=8000
JUPYTER_ENABLE_LAB=yes
JUPYTER_TOKEN=heavy
DOCKER_JUPYTER_CONTAINER=heavy-jupyter
DOCKER_STACKS_IMAGE=jupyter/base-notebook:latest

# Database Credentials (from servers.json)
DB_USERNAME=admin
DB_PASSWORD=HyperInteractive
DB_NAME=heavyai

# Additional Configuration
ENABLE_JUPYTER=false
DEFAULT_THEME=dark